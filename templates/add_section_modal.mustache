{{!
    @template mod_trainingevaluation/add_section_modal

    Template for the add section modal content.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * isSubsection - Whether this is a subsection or a top-level section

    Example context (json):
    {
        "isSubsection": false
    }
}}

<form id="add-section-form" class="add-section-form">
    <div class="form-group">
        <label for="newsectionname">
            {{#isSubsection}}
                {{#str}} subsectionname, trainingevaluation {{/str}}
            {{/isSubsection}}
            {{^isSubsection}}
                {{#str}} sectionname, trainingevaluation {{/str}}
            {{/isSubsection}}
        </label>
        <input type="text" class="form-control" id="newsectionname" name="sectionname" required>
    </div>
</form>
