{{!
    @template mod_trainingevaluation/item_config_textinput

    Template for the text input item config modal content.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * text - Placeholder text
    * maxlength - Max allowed length of text input

    Example context (json):
    {
        "text": "Example",
        "maxlength: 140,
        "rows": 3
    }
}}

<div class="form-group">
    <label for="editplaceholdertext">{{#str}} placeholdertext, trainingevaluation {{/str}}</label>
    <textarea class="form-control" id="editplaceholdertext" rows="4">{{text}}</textarea>
    <small class="form-text text-muted">{{#str}} placeholdertext_help, trainingevaluation {{/str}}</small>
    <label for="editmaxlength">{{#str}} maxlength, trainingevaluation{{/str}}</label>
    <input type="number" class="form-control" id="editmaxlength" value="{{maxlength}}">
    <label for="editrows">{{#str}} rows, trainingevaluation {{/str}}</label>
    <input type="number" class="form-control" id="editrows" value="{{rows}}">
    <small class="form-text text-muted">{{#str}} maxlength_help, trainingevaluation{{/str}}</small>
</div>
