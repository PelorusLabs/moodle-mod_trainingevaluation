{{!
    @template mod_trainingevaluation/add_item_modal

    Template for the add item modal content.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}

<form id="add-item-form" class="add-item-form">
    <div class="form-group">
        <label for="newitemname">{{#str}} itemname, trainingevaluation {{/str}}</label>
        <input type="text" class="form-control" id="newitemname" name="itemname" required>
        <label for="newitemdescription">{{#str}} itemdescription, trainingevaluation {{/str}}</label>
        <textarea class="form-control" id="newitemdescription" name="itemdescription" rows="3"></textarea>
        <label for="newitemisrequired">{{#str}} isitemrequired, trainingevaluation {{/str}}</label>
        <input type="checkbox" class="form-checkbox" id="newitemisrequired" name="itemisrequired" checked>
    </div>
    <div class="form-group">
        <label for="newitemtype">{{#str}} itemtype, trainingevaluation {{/str}}</label>
        <select name="itemtype" id="newitemtype" class="form-control">
            <option value="textinput">{{#str}} itemtype:textinput, trainingevaluation {{/str}}</option>
            <option value="selectmenu">{{#str}} itemtype:selectmenu, trainingevaluation {{/str}}</option>
            <option value="fileupload">{{#str}} itemtype:fileupload, trainingevaluation {{/str}}</option>
            <option value="datepicker">{{#str}} itemtype:datepicker, trainingevaluation {{/str}}</option>
        </select>
    </div>
</form>
