{{!
    @template mod_trainingevaluation/edit_item_modal

    Template for the edit item modal content.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * name - Item Name
    * description - Item Description
    * isrequired - Is item required for completion
    * typeConfigHtml - Item Type config template HTML

    Example context (json):
    {
        "name": "Example",
        "description": "Example"
        "isrequired": true,
        "typeConfigHtml": ""
    }
}}

<div class="mod-trainingevaluation-edit-item-form">
    <div class="form-group">
        <label for="edititemname">{{#str}}itemname, trainingevaluation{{/str}}</label>
        <input type="text" class="form-control" id="edititemname" name="edititemname"
               value="{{name}}" required>
        <label for="edititemdescription">{{#str}}itemdescription, trainingevaluation{{/str}}</label>
        <textarea class="form-control" id="edititemdescription" name="edititemdescription" rows="3">{{description}}</textarea>
        <label for="edititemisrequired">{{#str}} isitemrequired, trainingevaluation {{/str}}</label>
        <input type="checkbox" class="form-checkbox" id="edititemisrequired" name="edititemisrequired" {{#isrequired}}checked{{/isrequired}}>
    </div>

    {{! Type-specific configuration will be inserted here }}
    <div id="mod-trainingevaluation-item-type-config">
        {{{typeConfigHtml}}}
    </div>
</div>
