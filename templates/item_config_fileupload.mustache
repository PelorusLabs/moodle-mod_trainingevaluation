{{!
    @template mod_trainingevaluation/item_config_fileupload

    Template for the display text item config modal content.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * filetypes - Accepted file type list

    Example context (json):
    {
        "filetypes": "document"
    }
}}

<div class="form-group">
    <label for="editfiletypes">{{#str}} acceptedfiletypes, trainingevaluation {{/str}}</label>
    <input class="form-control" id="editfiletypes" value="{{filetypes}}">
    <span data-filetypesbrowser="editfiletypes"></span>
    <div data-filetypesdescriptions="editfiletypes"></div>
</div>
{{#js}}
    require(['core_form/filetypes'], function(filetypes) {
        filetypes.init('editfiletypes', {{#str}} acceptedfiletypes, trainingevaluation {{/str}}, [], true);
    });
{{/js}}
