{{!
    @template mod_trainingevaluation/edit_section_modal

    Template for the edit section modal content.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * sectionName - Section Name

    Example context (json):
    {
        "sectionName": "Example"
    }
}}

<div class="mod-trainingevaluation-edit-section-form">
    <div class="form-group">
        <label for="editsectionname">{{#str}}sectionname, trainingevaluation{{/str}}</label>
        <input type="text" class="form-control" id="editsectionname" name="editsectionname"
               value="{{sectionName}}" required>
    </div>
</div>
