{{!
    @template mod_trainingevaluation/item_config_selectmenu

    Template for the select menu item config modal content.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * options - List of select menu options

    Example context (json):
    {
        "options": [{"value": "Pass"}, {"value":"Fail"}]
    }
}}

<div class="form-group">
    <label for="editselectoptions">{{#str}} selectoptions, trainingevaluation {{/str}}</label>

    <div id="selectmenu-options-container" class="mb-2">
        {{#options}}
            <div class="input-group mb-2 selectmenu-option-row">
                <input type="text" class="form-control selectmenu-option-input" value="{{value}}" />
                <div class="input-group-append">
                    <button type="button" class="btn btn-danger selectmenu-remove-option">
                        <i class="fa fa-trash"></i>
                    </button>
                </div>
            </div>
        {{/options}}
        {{^options}}
            <div class="input-group mb-2 selectmenu-option-row">
                <input type="text" class="form-control selectmenu-option-input" value="" placeholder="{{#str}} enteroption, trainingevaluation {{/str}}" />
                <div class="input-group-append">
                    <button type="button" class="btn btn-danger selectmenu-remove-option">
                        <i class="fa fa-trash"></i>
                    </button>
                </div>
            </div>
        {{/options}}
    </div>

    <button type="button" id="selectmenu-add-option" class="btn btn-secondary">
        <i class="fa fa-plus"></i> {{#str}} addoption, trainingevaluation {{/str}}
    </button>

    <input type="hidden" id="editselectmenuoptions" name="editselectmenuoptions" value="" />
</div>
{{#js}}
    require(['mod_trainingevaluation/item_config_selectmenu'], function(module) {
        module.init();
    });
{{/js}}